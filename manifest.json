{
  "manifest_version": 3,
  "name": "X-UI Port Extractor",
  "version": "1.0",
  "description": "Extract port numbers from X-UI web tables and copy to clipboard",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "X-UI Port Extractor"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 